<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container" >
             <h1><span class="glyphicon glyphicon-tent"></span></span> Welcome To YelpCamps</h1>
             <p>View our hand-picked campgrounds from all over the world</p>
             <p>
                 <a class="btn btn-primary btn-lg" href="/campgrounds/new">Create new Campground</a>
             </p>
        </div>
    </header>
    
   <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(camp){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail ">
                <img id="sameSizeMake" src="<%=camp.image%>">
                 <div class="caption">
                    <h2><%=camp.name %></h2>
                 </div>
                 <div>
                     <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">More Info</a>
                 </div>
            </div>
            
        </div>
        <% }) %>
   </div>
    
</div>


<% include ../partials/footer %>